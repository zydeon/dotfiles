{
    // Editor
    "editor.suggestSelection": "first",
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.find.loop": false,
    "editor.rulers": [
        80,
        100
    ],
    
    // Add new line at end of file
    "files.insertFinalNewline": true,
    
    // Tab sizes
    "[python]": {
        "editor.tabSize": 4,
        "editor.formatOnType": true
    },
    "[cpp]": {
        "editor.tabSize": 2
    },

    // Theme
    "editor.fontSize": 15,
    "workbench.preferredDarkColorTheme": "Solarized Dark",
    "workbench.colorTheme": "Solarized Light",
    "workbench.preferredLightColorTheme": "Solarized Light",
    "window.autoDetectColorScheme": true,

    // Improve selection highlighting
    "workbench.colorCustomizations": {
        "[Solarized Light]": {
            "editor.selectionBackground": "#e2ddca",
            "editor.selectionHighlightBackground": "#eee8d5"
        }
    },
    
    // Hide certain files from side bar
    "files.exclude": {
        "**/__pycache__": true
    },
    
    // Python
    "python.formatting.provider": "black",
    "python.linting.flake8Args": [
        "--max-line-length=100",
    ],
    "python.defaultInterpreterPath": "/Users/pmatias/homebrew/opt/python@3.9/libexec/bin/python",
    "python.formatting.blackArgs": [
        "--line-length",
        "100"
    ],
    
    // Vim
    "vim.disableExtension": true,
    
    // Misc
    "security.workspace.trust.untrustedFiles": "open",
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
}
