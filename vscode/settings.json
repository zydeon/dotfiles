 {
     "editor.suggestSelection": "first",
     "editor.suggest.snippetsPreventQuickSuggestions": false,
     "fb.ms-remote-connections.hosts": [
         {
             "hostname": "our.pmatias.sb.facebook.com",
             "folders": []
         }
     ],
     "interactive-smartlog.pull": "arc pull",
     "interactive-smartlog.fetch": "jf get",
     "ml-workbench.frameworksConfigurations.secureGroup": "",

     // Editor
     "editor.find.loop": false,
     "editor.rulers": [80, 100],

     // Tab sizes
     "[python]": {
         "editor.tabSize": 4
     },
     "[cpp]": {
         "editor.tabSize": 2
     },

     // Theme
     "editor.fontSize": 15,
     "workbench.preferredDarkColorTheme": "Solarized Dark",
     "workbench.colorTheme": "Solarized Light",
     "workbench.preferredLightColorTheme": "Solarized Light",
     "window.autoDetectColorScheme": true,

     // Improve selection highlighting
     "workbench.colorCustomizations": {
         "[Solarized Light]": {
             "editor.selectionBackground": "#e2ddca",
             "editor.selectionHighlightBackground": "#eee8d5"
         }
     }

     "security.workspace.trust.untrustedFiles": "open",

     // Formatting
     "editor.formatOnSave": true,
     "python.formatting.provider": "black"

    // Hide certain files from side bar
    "files.exclude": {
        "**/__pycache__": true
    }
 }
